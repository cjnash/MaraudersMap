<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label "First Name" %>
    <%= f.text_field :first_name, :size => 25 %>
  </div>
  
  <div class="field">
    <%= f.label "Last Name" %>
    <%= f.text_field :last_name, :size => 25 %>
  </div>
  
  <div class="field">
    <%= f.label "Phone" %>
    <%= f.text_field :phone_number, :size => 10 %>
  </div>
  
  <div class="field">
    <%= f.label "Your pic" %>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
