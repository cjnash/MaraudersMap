<div id="pageinfoheadline">
  <h1>My Dashboard</h1>
</div>
  
<div id="mainbody">
	<p>
		<%= render :partial => 'shared/user_pages', :locals => { :limit => 5 } %>
	</p><br>

	<p>
		<%= render :partial => 'shared/pages', :locals => { :limit => 5 } %>
	</p><br>
	
	<p>
		<%= render :partial => 'shared/section_pages', :locals => { :sections => [*Section.all.shuffle.first], :limit => 5 } %>
	</p><br>

<h2>More links</h2>
	<%= link_to 'My Profile', profile_path(current_user.profile) %> <br>
	<%= link_to 'List of Live Web Pages', pages_path %> <br>
	<%= link_to 'Image and File Folders', folders_path %> <br>
	<%= link_to 'SIGN OUT', destroy_user_session_path if current_user %>

</div>

<div id="sidebar">
  <%= render :partial => "pages/search" %>
  <br>
 <p>Live page count: <strong><%= Page.live.size %></strong></p>
 <br>
 <p>View <strong><%= link_to 'all live', pages_path(:status => :live) %></strong> or <strong><%= link_to 'offline', pages_path(:status => :offline) %></strong> pages</p>
 </div>
 
 <div id="sidebar">
 <p>View by <strong><%= link_to 'section', sections_path %>:</strong><br> <% @sections.each do |section| %>
   <%= link_to section.name, section_path(section) %>
	<% end %></p>
	</div>

	<div id="sidebar">
 <p>View by <strong><%= link_to 'publisher', profiles_path %>:</strong><br> <% @profiles.each do |profile| %>
   <%= link_to profile.user.username, profile_path(profile) %>
	<% end %></p>
	</div>
	
	<div id="sidebar">
  <p>Download the <strong><%= link_to 'report', pages_path(@page, :format => :csv) %></strong>. <i>(Hint: Right click and "save as...")</i></p>
 	</div>
 	
  <div id="footer">
    <p><%= link_to 'Back to your dashboard', dashboards_path %> | <%= link_to 'SIGN OUT', destroy_user_session_path if current_user %></p></div>