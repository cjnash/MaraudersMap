<div id="pageinfoheadline">
  <h1>My Dashboard</h1>
</div>
  
<div id="mainbody">
	<h3><%= link_to 'My Profile', profile_path(current_user.profile) %> | <%= link_to 'Live Web Pages', pages_path %> | <%= link_to 'List Publishers', profiles_path %> | 	<%= link_to 'List Sections', sections_path %> | <%= link_to 'Image and File Folders', folders_path %>
	  </h3>
<hr>
	<p>
		<%= render :partial => 'shared/user_pages', :locals => { :limit => 5 } %>
	</p>
	<p>
		<%= render :partial => 'shared/section_pages', :locals => { :sections => [*Section.all.shuffle.first], :limit => 5 } %>
	</p>
	<p>
		<%= render :partial => 'shared/pages', :locals => { :limit => 5 } %>
	</p>
	<hr>
</div>

<div id="sidebar">
  <%= render :partial => "pages/search" %>
</div>
  
  <div id="sidebar">
  <p>Live page count: <strong><%= Page.live.size %></strong></p>
  </div>
  
  <div id="sidebar">
  <p>View <%= link_to 'all live', pages_path(:status => :live) %> or <%= link_to 'offline', pages_path(:status => :offline) %> pages</p>
  </div>
  
  <div id="sidebar">
  <p><strong>View by section:</strong> <% @sections.each do |section| %>
    <%= link_to section.name, section_path(section) %>
	<% end %></p>
	</div>
	
	<div id="sidebar">
  <p><strong>View by user:</strong> <% @profiles.each do |profile| %>
    <%= link_to profile.user.username, profile_path(profile) %>
	<% end %></p>
	</div>
