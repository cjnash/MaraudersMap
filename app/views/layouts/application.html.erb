<!DOCTYPE html>
<html>
<head>
  <title>MaraudersMap</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="banner">
    <%= "The Marauder's Map" %>
  </div>
  
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <%- end -%>
<%= yield %>

</body>
</html>
