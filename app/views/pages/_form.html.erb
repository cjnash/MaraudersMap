<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :headline %><br />
    <%= f.text_field :headline, :size => 50 %>
  </div>
  <div class="field">
    <%= f.label :cms_page_id %><br />
    <%= f.text_field :cms_page_id, :size => 6 %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :section %><br />
    <%= f.text_field :section, :size => 20 %>
  </div>
  <div class="field">
    <%= f.label :path %><br />
    <%= f.text_field :path, :size => 35 %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url, :size => 75 %>
  </div>
  <%= f.hidden_field :created_by, :value => @user.username, :only => :new %>
  <%= f.hidden_field :updated_by, :value => @user.username, :only => :edit %>
  <div class="field">
    <%= f.label :reviewed_by %><br />
    <%= f.text_field :reviewed_by %>
  </div>
  <div class="field">
    <%= f.label :reviewed_date %><br />
    <%= f.text_field :reviewed_date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
