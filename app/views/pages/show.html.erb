<div id="pageinfoheadline">
<h1><%= @page.metadata.content_title.html_safe %></h1>
</div>

<div id="pageinfo">
  <h2>Vital Stats</h2>
<p>
  <strong>CMS page ID #:</strong>
  <%= @page.cms_page_id %>
</p>

<p>
  <strong>Current status: </strong><%= @page.status %>
  </p>
  
<p>
  <strong>Available to:</strong>
  <%= @page.user_state %>
</p>

<p>
  <strong>Site section:</strong>
	<%= section_link %>
</p>

<p>
  <strong>Navigation path:</strong>
  <%= @page.path %>
</p>

<p>
	<strong>Permanent link:</strong>
  <%= link_to @page.url, @page.url %>
</p>

<p>
  <strong>Permanent link:</strong>
  <%= link_to "Open in SmartEdit", "#{SMARTEDIT_URL}?#{@page.cms_url}", { :target => :blank } %>
</p>

<p>
  <strong>Deeplink(s):</strong>
  <%= @page.deep_link %>
</p>

<p>
  <strong>CMS template:</strong>
  <%= @page.template %>
</p><br>

<strong>Update History:</strong>
<p>
Last published on <%= pretty_date(@page.published_date) %><br/>
Created on <%= pretty_date(@page.cms_created_at.utc) %><br/>
Last reviewed by <%= @page.reviewed_by %> on <%= pretty_date(@page.reviewed_date) %><br/>
Next review date: <%= pretty_date(@page.next_review_date) %>
</p>

</div>

<div id="notes">
<h2>Notebook</h2>
<%= form_for([@page, @page.notes.build]) do |f| %>
  <div class="field">
    <%= f.text_area :body, :size => "50x10" %>
  </div>
  <%= f.hidden_field :commenter, :value => @user.username %>
  <div class="actions">
    <%= f.submit 'Add note' %>
  </div>
<% end %>
<br>
<strong>Past notes</strong>
<%= render  :partial => "notes/note",
            :collection => @page.notes, :order => "created_at DESC" %>
</div>

<div id="footer">
<%= link_to 'Edit this Page', edit_page_path(@page) %> |
<%= link_to 'Back to Index', pages_path %>
</div>
